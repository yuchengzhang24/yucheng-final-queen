{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ title }} by {{ author }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="../img/members/{{ image }}" alt="" class="img-fluid mb-4">
        </div>
        <div class="col-md-8">
            <h1>{{ name }}</h1>
            <p>{{ description | safe }}</p>
        </div>
      
    </div>
  </article>
{% endblock %}