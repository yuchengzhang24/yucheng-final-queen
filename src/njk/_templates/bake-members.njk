{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}{{ title }} {% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-md-4">
          <img src="../img/members/{{ image }}" alt="" class="img-fluid mb-4">
      </div>
      <div class="col-md-8">
        <div class="card border-warning">
  <div class="card-body bg-warning text-black">
    <h1 class="card-title">{{ name }}</h5>
    <p class="card-text">{{ description | safe }}</p>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Tenure: {{tenure}}</li>
    <li class="list-group-item">Instruments: {{instruments}}</li>
    <li class="list-group-item">Birthday: {{birthdate}}</li>
    <li class="list-group-item">Birthplace: {{birthplace}}</li>
  </ul>
  </div>
    </div>
  </article>
{% endblock %}